{
  "name": "piral-hooks-utils",
  "version": "1.8.0",
  "description": "Hooks and HOC for pilets and Piral instances.",
  "keywords": [
    "piral",
    "smapiot",
    "pilet",
    "modules",
    "hoc",
    "react",
    "microfrontends",
    "hooks",
    "providers"
  ],
  "author": "smapiot",
  "homepage": "https://piral.io",
  "license": "MIT",
  "module": "lib/index.js",
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "exports": {
    ".": "./lib/index.js",
    "./lib/*": {
      "import": "./lib/*",
      "types": "./lib/*.d.ts"
    },
    "./package.json": "./package.json"
  },
  "sideEffects": false,
  "files": [
    "lib",
    "src"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/smapiot/piral.git"
  },
  "bugs": {
    "url": "https://github.com/smapiot/piral/issues"
  },
  "scripts": {
    "cleanup": "rimraf esm lib",
    "build": "yarn build:esnext",
    "build:esnext": "tsc --project tsconfig.json --outDir lib --module esnext",
    "typedoc": "typedoc --json ../../../docs/types/piral-hooks-utils.json src --exclude \"src/**/*.test.*\"",
    "test": "echo \"Error: run tests from root\" && exit 1"
  }
}
