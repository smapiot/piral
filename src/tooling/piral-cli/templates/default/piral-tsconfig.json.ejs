{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": false,
    "jsx": "react",
    "noLib": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "target": "es5",
    "sourceMap": true,
    "lib": ["es6", "dom", "esnext"]
  },
  "include": [
    "./<%- src %>"
  ],
  "exclude": [
    "node_modules"
  ]
}
